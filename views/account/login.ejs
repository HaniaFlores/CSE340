<h1>
    <%= title %>
</h1>

<%- messages() %>
<% if (errors) { %>
    <ul>
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

<div class="form-display">
    <form id="loginForm" action="/account/login" method="post">
        <div>
            <label for="account_email">Email:</label>
            <input type="email" name="account_email" id="accountEmail" required>
        </div>
        <div>
            <label for="account_password">Password:</label>
            <input type="password" name="account_password" id="accountPassword" required>
        </div>

        <button type="submit">Login</button>
    </form>

    <span class="no-registered">Don't have an account? <a href="/account/register">Register</a></span>
    
</div>