<!-- content heading -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
} %>
 
<%- messages() %>
<% if (errors) { %>
  <ul>
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
 <%  }) %>
 </ul>
<% } %>

<form action="/inv/add-classification" method="post">
    <label for="classification_name">Classification Name:</label>
    <input type="text" id="classificationName" name="classification_name" required pattern="[a-zA-Z]+">
    <br>
    <p>Please enter a classification name without spaces or special characters.</p>
    <input type="submit" value="Add Classification">
</form>